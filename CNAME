<script>
// Global object to store user data (simulate a database)
let userDatabase = {};

// Show the login form and hide the register form
document.getElementById("loginLink").addEventListener("click", function(e) {
  e.preventDefault();
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("login-section").classList.remove("hidden");
});

// Show the register form and hide the login form
document.getElementById("registerLink").addEventListener("click", function(e) {
  e.preventDefault();
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("register-section").classList.remove("hidden");
});

// Handle login form submission
document.getElementById("loginForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let email = document.getElementById("loginEmail").value;
  let password = document.getElementById("loginPassword").value;

  // Check if the entered email and password match the user in the database
  if (userDatabase[email] && userDatabase[email].password === password) {
    document.getElementById("login-section").classList.add("hidden");
    document.getElementById("account-overview").classList.remove("hidden");
    
    document.getElementById("accountNumber").textContent = userDatabase[email].number; // Use stored name
    
    document.getElementById("userName").textContent = userDatabase[email].name; // Use stored name
    document.getElementById("userBalance").textContent = "#5000"; // Simulate balance
    populateTransactionHistory();
  } else {
    document.getElementById("loginError").textContent = "Invalid email or password!";
  }
});

// Handle registration form submission
document.getElementById("registerForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let number = document.getElementById("phoneNumber").value;
  let name = document.getElementById("registerName").value;
  let email = document.getElementById("registerEmail").value;
  let password = document.getElementById("registerPassword").value;

  // Simple validation (for demonstration purposes)
  if (number && name && email && password) {
    // Save user data to "database"
    userDatabase[email] = {
      number: number,
      name: name,
      password: password
    };
    alert("Registration successful!");
    document.getElementById("register-section").classList.add("hidden");
    document.getElementById("login-section").classList.remove("hidden");
  } else {
    document.getElementById("registerError").textContent = "Please fill all fields!";
  }
});

// Populate recent transaction history



// Handle logout
document.getElementById("logoutBtn").addEventListener("click", function() {
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("login-section").classList.remove("hidden");
});

// Handle transfer button click
document.getElementById("transferBtn").addEventListener("click", function() {
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("transfer-modal").classList.remove("hidden");
});

// Handle transfer form submission
document.getElementById("transferForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let amount = document.getElementById("transferAmount").value;
  let recipient = document.getElementById("transferRecipient").value;

  if (amount && recipient) {
    alert(`Transferred ${amount} to ${recipient}`);
    document.getElementById("transfer-modal").classList.add("hidden");
    document.getElementById("account-overview").classList.remove("hidden");
  } else {
    document.getElementById("transferError").textContent = "Please fill all fields!";
  }
});

// Handle canceling transfer
document.getElementById("cancelTransferBtn").addEventListener("click", function() {
  document.getElementById("transfer-modal").classList.add("hidden");
  document.getElementById("account-overview").classList.remove("hidden");
});

// Handle airtime recharge button click
document.getElementById("airtimeBtn").addEventListener("click", function() {
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("airtime-modal").classList.remove("hidden");
});

// Handle airtime recharge form submission
document.getElementById("airtimeForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let number = document.getElementById("airtimeNumber").value;
  let amount = document.getElementById("airtimeAmount").value;
  let card = document.getElementById("card-option").value;

  if (number && amount) {
    alert(`Recharged ${card} ${amount} to ${number}`);
    document.getElementById("airtime-modal").classList.add("hidden");
    document.getElementById("account-overview").classList.remove("hidden");
  } else {
    document.getElementById("airtimeError").textContent = "Please fill all fields!";
  }
});

// Handle canceling airtime recharge
document.getElementById("cancelAirtimeBtn").addEventListener("click", function() {
  document.getElementById("airtime-modal").classList.add("hidden");
  document.getElementById("account-overview").classList.remove("hidden");
});

// Handle data purchase button click
document.getElementById("dataBtn").addEventListener("click", function() {
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("data-modal").classList.remove("hidden");
});

// Handle data purchase form submission
document.getElementById("dataForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let number = document.getElementById("dataNumber").value;
  let amount = document.getElementById("dataAmount").value;
  let network = document.getElementById("sim-option").value;
  let data = document.getElementById("data-option").value;

  if (number && amount) {
    alert(`Purchased data of ${network} (${data}) to ${number}`);
    document.getElementById("data-modal").classList.add("hidden");
    document.getElementById("account-overview").classList.remove("hidden");
  } else {
    document.getElementById("dataError").textContent = "Please fill all fields!";
  }
});

// Handle canceling data purchase
document.getElementById("cancelDataBtn").addEventListener("click", function() {
  document.getElementById("data-modal").classList.add("hidden");
  document.getElementById("account-overview").classList.remove("hidden");
});

// Handle bill payment button click
document.getElementById("billBtn").addEventListener("click", function() {
  document.getElementById("account-overview").classList.add("hidden");
  document.getElementById("bill-modal").classList.remove("hidden");
});

// Handle bill payment form submission
document.getElementById("billForm").addEventListener("submit", function(e) {
  e.preventDefault();
  let billName = document.getElementById("billNumber").value;
  let amount = document.getElementById("billAmount").value;
  let billOption = document.getElementById("bill-option").value;
  let billAcc = document.getElementById("billcNumber").value;

  if (billName && amount) {
    alert(`Paid bill for ${billOption} with the amount of ${amount} to ${billName}(${billAcc})`);
    document.getElementById("bill-modal").classList.add("hidden");
    document.getElementById("account-overview").classList.remove("hidden");
  } else {
    document.getElementById("billError").textContent = "Please fill all fields!";
  }
});

// Handle canceling bill payment
document.getElementById("cancelBillBtn").addEventListener("click", function() {
  document.getElementById("bill-modal").classList.add("hidden");
  document.getElementById("account-overview").classList.remove("hidden");
});
</script>
  
  
